<Window x:Class="NguyenVanCauWPF.CustomerManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenVanCauWPF"
        mc:Ignorable="d"
        Title="CustomerManager" Height="450" Width="800">
    <DockPanel Margin="10">
        <!-- Top search and add section -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="txtSearch" Width="220" Margin="0 0 10 0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     />
            <Button Content="Tìm" Width="80" Click="Search_Click"/>
            <Button Content="Thêm" Width="80" Margin="10 0 0 0" Click="Add_Click"/>
        </StackPanel>

        <!-- Customer table -->
        <DataGrid x:Name="dgCustomer" ItemsSource="{Binding Customers}" 
                  SelectedItem="{Binding SelectedCustomer}" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Margin="0 10 0 0" CanUserAddRows="False" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="50"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding CustomerFullName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="*"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding Telephone}" Width="100"/>
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding CustomerBirthday, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding CustomerStatus}" Width="100"/>

                <DataGridTemplateColumn Header="Tác vụ" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Sửa" Width="50" Margin="5 0" Click="Edit_Click"/>
                                <Button Content="Xóa" Width="50" Click="Delete_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
