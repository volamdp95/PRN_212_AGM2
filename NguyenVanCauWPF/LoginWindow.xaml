<Window x:Class="NguyenVanCauWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenVanCauWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Border Width="400" Padding="30" Background="White" VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="#ccc" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="FUMiniHotelSystem" FontSize="22" FontWeight="Bold" Foreground="#1e88e5" HorizontalAlignment="Center" Margin="0 0 0 20"/>

                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <TextBox x:Name="txtEmail" Height="35" Padding="10" FontSize="14"/>

                <TextBlock Text="Password" FontWeight="SemiBold" Margin="10 10 0 5"/>
                <PasswordBox x:Name="txtPassword" Height="35" Padding="10" FontSize="14"/>

                <Button Content="Login" Height="40" Margin="0 20 0 0"
                        Background="#1e88e5" Foreground="White" FontWeight="Bold"
                        Click="Login_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
