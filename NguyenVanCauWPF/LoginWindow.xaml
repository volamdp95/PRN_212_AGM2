<Window x:Class="NguyenVanCauWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenVanCauWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="550" Width="800">
    <Grid Margin="0,0,0,-202">
        <Grid.Background>
            <SolidColorBrush Color="#f5f7fa"/>
        </Grid.Background>

        <!-- Main Login Card -->
        <Border Width="590" 
                Background="White" 
                HorizontalAlignment="Center"
                Padding="40" Margin="0,84,0,146">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                ShadowDepth="5" 
                                Opacity="0.3" 
                                Color="Black"/>
            </Border.Effect>

            <StackPanel>
                <!-- Header Section -->
                <StackPanel Margin="0 0 0 30">


                    <TextBlock Text="FU Mini Hotel System" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="#2c3e50" 
                             HorizontalAlignment="Center" 
                             Margin="0 0 0 5"/>
                </StackPanel>

                <!-- Email Input -->
                <StackPanel Margin="0 25 0 0">
                    <TextBlock Text="Email Address" 
                             FontWeight="SemiBold" 
                             Foreground="#34495e" 
                             Margin="0 0 0 8"/>

                    <Border Background="#f8f9fa" 
                          BorderBrush="#e9ecef" 
                          BorderThickness="1" 
                          Height="45">
                        <TextBox x:Name="txtEmail" 
                               Background="Transparent" 
                               BorderThickness="0" 
                               Padding="15,0" 
                               FontSize="14" 
                               VerticalContentAlignment="Center"
                               Foreground="#2c3e50"/>
                    </Border>
                </StackPanel>

                <!-- Password Input -->
                <StackPanel Margin="0 20 0 0">
                    <TextBlock Text="Password" 
                             FontWeight="SemiBold" 
                             Foreground="#34495e" 
                             Margin="0 0 0 8"/>

                    <Border Background="#f8f9fa" 
                          BorderBrush="#e9ecef" 
                          BorderThickness="1" 
                          Height="45">
                        <PasswordBox x:Name="txtPassword" 
                                   Background="Transparent" 
                                   BorderThickness="0" 
                                   Padding="15,0" 
                                   FontSize="14" 
                                   VerticalContentAlignment="Center"
                                   Foreground="#2c3e50"/>
                    </Border>
                </StackPanel>

                <!-- Login Button -->
                <Button Content="Login" 
                      Height="40" 
                      Margin="0 25 0 0"
                      Background="#6c757d" 
                      Foreground="White" 
                      FontWeight="SemiBold"
                      FontSize="14"
                      BorderThickness="0"
                      Cursor="Hand"
                      Click="Login_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6c757d"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                              CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5a6268"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#495057"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
