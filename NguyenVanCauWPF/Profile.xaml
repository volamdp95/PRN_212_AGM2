<Window x:Class="NguyenVanCauWPF.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenVanCauWPF"
        mc:Ignorable="d"
        Title="Customer Profile" Height="600" Width="650"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#f5f7fa"/>
        </Grid.Background>

        <!-- Main Profile Card -->
        <Border Background="White" 
                Margin="30"
                Padding="35">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                ShadowDepth="3" 
                                Opacity="0.2" 
                                Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0 0 0 25">
                    <TextBlock Text="Customer Profile" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="#495057" 
                             HorizontalAlignment="Center" 
                             Margin="0 0 0 8"/>


                    <Rectangle Height="1" 
                             Fill="#dee2e6" 
                             Margin="80 15 80 0"/>
                </StackPanel>

                <!-- Form Fields -->
                <Grid Grid.Row="1" Margin="0 20 0 20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Full Name Field -->
                    <StackPanel Grid.Row="0" Margin="0 0 0 20">
                        <TextBlock Text="Full Name" 
                                 FontWeight="SemiBold" 
                                 Foreground="#495057" 
                                 Margin="0 0 0 8"/>

                        <Border Background="#ffffff" 
                              BorderBrush="#dee2e6" 
                              BorderThickness="1" 
                              Height="40">
                            <TextBox x:Name="txtName" 
                                   Background="Transparent" 
                                   BorderThickness="0" 
                                   Padding="12,0" 
                                   FontSize="14" 
                                   VerticalContentAlignment="Center"
                                   Foreground="#495057"/>
                        </Border>
                    </StackPanel>

                    <!-- Phone Field -->
                    <StackPanel Grid.Row="1" Margin="0 0 0 20">
                        <TextBlock Text="Phone Number" 
                                 FontWeight="SemiBold" 
                                 Foreground="#495057" 
                                 Margin="0 0 0 8"/>

                        <Border Background="#ffffff" 
                              BorderBrush="#dee2e6" 
                              BorderThickness="1" 
                              Height="40">
                            <TextBox x:Name="txtPhone" 
                                   Background="Transparent" 
                                   BorderThickness="0" 
                                   Padding="12,0" 
                                   FontSize="14" 
                                   VerticalContentAlignment="Center"
                                   Foreground="#495057"/>
                        </Border>
                    </StackPanel>

                    <!-- Birthday Field -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Date of Birth" 
                                 FontWeight="SemiBold" 
                                 Foreground="#495057" 
                                 Margin="0 0 0 8"/>

                        <Border Background="#ffffff" 
                              BorderBrush="#dee2e6" 
                              BorderThickness="1" 
                              Height="40">
                            <DatePicker x:Name="dpBirthday" 
                                      Background="Transparent" 
                                      BorderThickness="0" 
                                      Padding="12,0" 
                                      FontSize="14" 
                                      VerticalContentAlignment="Center"
                                      Foreground="#495057"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Center" 
                          Margin="0 15 0 0">

                    <!-- Save Button -->
                    <Button Content="Save Changes"
                          Width="140" 
                          Height="40" 
                          Margin="0 0 15 0"
                          Background="#28a745" 
                          Foreground="White"
                          FontWeight="SemiBold"
                          FontSize="14"
                          BorderThickness="0"
                          Cursor="Hand"
                          Click="Save_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28a745"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                  CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#218838"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1e7e34"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- View Bookings Button -->
                    <Button Content="View Bookings"
                          Width="140" 
                          Height="40" 
                          Background="#6c757d" 
                          Foreground="White"
                          FontWeight="SemiBold"
                          FontSize="14"
                          BorderThickness="0"
                          Cursor="Hand"
                          Click="ViewBooking_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#6c757d"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                  CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5a6268"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#495057"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>