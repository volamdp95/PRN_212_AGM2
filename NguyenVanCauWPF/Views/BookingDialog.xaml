<Window x:Class="NguyenVanCauWPF.Views.BookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Dialog" Height="600" Width="650"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Booking Info -->
        <StackPanel Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Booking Date:" Width="120"/>
                <DatePicker x:Name="dpBookingDate" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Customer ID:" Width="120"/>
                <TextBox x:Name="txtCustomerID" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Status (1=Confirmed):" Width="120"/>
                <TextBox x:Name="txtStatus" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Total Price:" Width="120"/>
                <TextBox x:Name="txtTotalPrice" Width="200" IsReadOnly="True"/>
            </StackPanel>
        </StackPanel>

        <!-- Booking Details -->
        <GroupBox Grid.Row="1" Header="Booking Details (Rooms)">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,5">
                    <Button Content="Add Room" Width="100" Margin="0,0,10,0" Click="BtnAddRoom_Click"/>
                    <Button Content="Remove Selected" Width="120" Click="BtnRemoveRoom_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgDetails" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Room ID" Binding="{Binding RoomID}" Width="*"/>
                        <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" Width="*"/>
                        <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" Width="*"/>
                        <DataGridTextColumn Header="Actual Price" Binding="{Binding ActualPrice}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <!-- Save/Cancel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Save" Width="100" Margin="10" Click="BtnSave_Click"/>
            <Button Content="Cancel" Width="100" Margin="10" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>