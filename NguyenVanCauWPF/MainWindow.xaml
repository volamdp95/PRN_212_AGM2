<Window x:Class="NguyenVanCauWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenVanCauWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="436" >
            <TextBlock Text="FU Mini Hotel - Admin Dashboad"
                       FontSize="20" FontWeight="Bold" Foreground="#1e88e5"
                       HorizontalAlignment="Center" Margin="0 0 0 30"/>

            <Button Content="Manage Customer" Height="40" Margin="0 0 0 10"
                    Background="#bbdefb" Foreground="Black"
                    FontWeight="SemiBold"
                    Click="ManageCustomer_Click" />

            <Button Content="Manage Room" Height="40" Margin="0 0 0 10"
                    Background="#4caf50" Foreground="White"
                    FontWeight="SemiBold"
                    Click="ManageRoom_Click" />

            <Button Content="Manage Booking" Height="40"
                    Background="#ffa000" Foreground="White"
                    FontWeight="SemiBold"
                    Click="ManageBooking_Click" />
        </StackPanel>
    </Grid>
    
</Window>
