<Window x:Class="NguyenVanCauWPF.BookingManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenVanCauWPF"
        mc:Ignorable="d"
        Title="Booking Manager" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#f8f9fa"/>
        </Grid.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="280"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" Padding="20" Margin="0 0 0 15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Booking Management" 
                             FontSize="22" 
                             FontWeight="Bold" 
                             Foreground="#495057" 
                             Margin="0 0 0 5"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="1" Background="White" Padding="20" Margin="0 15 0 15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Border.Effect>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <!-- Add Button -->
                    <Button Content="Add Booking"
                          Width="130" 
                          Height="36"
                          Margin="0 0 12 0"
                          Background="#28a745" 
                          Foreground="White" 
                          FontWeight="SemiBold"
                          BorderThickness="0"
                          Click="BtnAdd_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28a745"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#218838"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Edit Button -->
                    <Button Content="Edit Booking"
                          Width="130" 
                          Height="36"
                          Margin="0 0 12 0"
                          Background="#ffc107" 
                          Foreground="White" 
                          FontWeight="SemiBold"
                          BorderThickness="0"
                          Click="BtnEdit_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#ffc107"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#e0a800"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Delete Button -->
                    <Button Content="Delete Booking"
                          Width="130" 
                          Height="36"
                          Background="#dc3545" 
                          Foreground="White" 
                          FontWeight="SemiBold"
                          BorderThickness="0"
                          Click="BtnDelete_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#dc3545"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#c82333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Booking List Section -->
            <Border Grid.Row="2" Background="White" Margin="0 0 0 15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Section Header -->
                    <Border Grid.Row="0" Background="#f8f9fa" Padding="15,12">
                        <TextBlock Text="Booking Reservations" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#495057"/>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                            x:Name="dgBookingList" 
                            AutoGenerateColumns="False" 
                            SelectionChanged="dgBookingList_SelectionChanged"
                            CanUserAddRows="False" 
                            HeadersVisibility="Column"
                            GridLinesVisibility="Horizontal"
                            HorizontalGridLinesBrush="#e9ecef"
                            RowHeight="40"
                            FontSize="13"
                            Margin="1">

                        <!-- DataGrid Styling -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#f1f3f4"/>
                                <Setter Property="Foreground" Value="#495057"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Height" Value="35"/>
                                <Setter Property="BorderBrush" Value="#dee2e6"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="Padding" Value="12,0"/>
                            </Style>

                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#f8f9fa"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#e3f2fd"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#495057"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" 
                                              Binding="{Binding BookingReservationID}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Customer Name" 
                                              Binding="{Binding Customer.CustomerFullName}" 
                                              Width="200"/>
                            <DataGridTextColumn Header="Booking Date" 
                                              Binding="{Binding BookingDate, StringFormat=dd/MM/yyyy}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Total Price" 
                                              Binding="{Binding TotalPrice, StringFormat=C}" 
                                              Width="120">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="12,0"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#28a745"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Booking Details Section -->
            <Border Grid.Row="3" Background="White">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Section Header -->
                    <Border Grid.Row="0" Background="#f8f9fa" Padding="15,12">
                        <TextBlock Text="Booking Details" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#495057"/>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                            x:Name="dgBookingDetails" 
                            AutoGenerateColumns="False" 
                            CanUserAddRows="False" 
                            HeadersVisibility="Column"
                            GridLinesVisibility="Horizontal"
                            HorizontalGridLinesBrush="#e9ecef"
                            RowHeight="40"
                            FontSize="13"
                            Margin="1">

                        <!-- DataGrid Styling -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#f1f3f4"/>
                                <Setter Property="Foreground" Value="#495057"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Height" Value="35"/>
                                <Setter Property="BorderBrush" Value="#dee2e6"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="Padding" Value="12,0"/>
                            </Style>

                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#f8f9fa"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#e3f2fd"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#495057"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Room ID" 
                                              Binding="{Binding RoomID}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Check-in Date" 
                                              Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" 
                                              Width="130"/>
                            <DataGridTextColumn Header="Check-out Date" 
                                              Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" 
                                              Width="130"/>
                            <DataGridTextColumn Header="Room Price" 
                                              Binding="{Binding ActualPrice, StringFormat=C}" 
                                              Width="120">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="12,0"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#dc3545"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>